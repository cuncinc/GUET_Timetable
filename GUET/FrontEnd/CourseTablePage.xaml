    <StackPanel Margin="12">
        <ComboBox ItemsSource="{x:Bind schoolWeeks}" Width="100" SelectionChanged="ComboBox_SelectionChanged" HorizontalAlignment="Stretch"/>
            <Grid HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="课表" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Width="102" Text="周一" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周二" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周三" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周四" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周五" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周六" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周日" VerticalAlignment="Center" TextAlignment="Center"/>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="102"/>
                    <RowDefinition Height="102"/>
                    <RowDefinition Height="102"/>
                    <RowDefinition Height="102"/>
                    <RowDefinition Height="102"/>
                </Grid.RowDefinitions>
                <TextBlock Text="1" Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="2" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="3" Grid.Row="2" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="4" Grid.Row="3" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="5" Grid.Row="4" TextAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <GridView Grid.Column="1" Grid.Row="1" ItemsSource="{x:Bind tableItems}" SelectionMode="None" IsItemClickEnabled="True">
                <!--ItemClick="GridView_ItemClick" FlyoutBase.AttachedFlyout="{StaticResource LessonDetailFlyout}">-->
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="2, 2, 2, 2"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid x:Name="MaxItemsWrapGrid" 
                           MaximumRowsOrColumns="7" 
                           Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="model:LessonTableItem">
                        <Grid Height="100" Width="100">
                            <Rectangle Fill="{x:Bind Color}"/>
                            <TextBlock Text="{x:Bind Text}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
    </StackPanel>
