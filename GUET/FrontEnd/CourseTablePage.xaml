<Page
    x:Class="GUET.FrontEnd.CourseTablePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GUET.FrontEnd"
    xmlns:model="using:GUET.BackEnd.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <ComboBox ItemsSource="{x:Bind schoolWeeks}" Header="第几周" Width="100" SelectionChanged="ComboBox_SelectionChanged"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="课表"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">   
                <TextBlock Width="102" Text="周一"  TextAlignment="Center"/>
                <TextBlock Width="102" Text="周二" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周三" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周四" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周五" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周六" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Width="102" Text="周日" VerticalAlignment="Center" TextAlignment="Center"/>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="102"/>
                    <RowDefinition Height="102"/>
                    <RowDefinition Height="102"/>
                    <RowDefinition Height="102"/>
                    <RowDefinition Height="102"/>
                </Grid.RowDefinitions>
                <TextBlock Text="1" Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="2" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="3" Grid.Row="2" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="4" Grid.Row="3" TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="5" Grid.Row="4" TextAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <GridView Grid.Column="1" Grid.Row="1" ItemsSource="{x:Bind tableItems}" SelectionMode="None">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="2, 2, 2, 2"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid x:Name="MaxItemsWrapGrid" 
                           MaximumRowsOrColumns="7" 
                           Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="model:LessonTableItem">
                        <Grid Height="100" Width="100">
                            <Rectangle Fill="{x:Bind Color}"/>
                            <TextBlock Text="{x:Bind Text}" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>


