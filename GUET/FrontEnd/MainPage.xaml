<Page
    x:Class="GUET.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GUET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView
            IsSettingsVisible="False"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="False"
            PaneDisplayMode="Auto"  
            IsPaneOpen="False">

            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Tag" Content="课表" Tapped="NavigationViewItem_Tapped_CourseTable"/>
                <NavigationViewItem Icon="DisconnectDrive"  Content="成绩" Tapped="NavigationViewItem_Tapped_Score"/>
                <NavigationViewItem Icon="More"  Content="个人信息" Tapped="NavigationViewItem_Tapped_More"/>
            </NavigationView.MenuItems>
            <Frame x:Name="mainPageFrame"/>
        </NavigationView>
    </Grid>
</Page>
